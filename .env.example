# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Node Environment
NODE_ENV=development

# Replit Authentication
REPLIT_AUTH_SECRET=your-replit-auth-secret-key

# Payment Gateway (Optional - configure if using payments)
PAYMENT_GATEWAY_KEY=your-payment-gateway-api-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret-key

# Notification Services (Optional - configured per spa in admin panel)
# Email Provider (SendGrid/Resend)
DEFAULT_EMAIL_PROVIDER=sendgrid
DEFAULT_EMAIL_API_KEY=your-email-provider-api-key

# SMS/WhatsApp Provider (Twilio)
DEFAULT_SMS_PROVIDER=twilio
DEFAULT_TWILIO_ACCOUNT_SID=your-twilio-account-sid
DEFAULT_TWILIO_AUTH_TOKEN=your-twilio-auth-token
DEFAULT_TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Server Configuration
PORT=5000

# Security Settings
CORS_ORIGIN=http://localhost:5000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Settings
MAX_REQUEST_SIZE=10mb
